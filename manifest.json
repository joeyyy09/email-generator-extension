{
  "manifest_version": 2,
  "name": "ChatGPT LinkedIn Email Generator",
  "version": "1.0",
  "description": "Generates personalized LinkedIn emails using ChatGPT",
  "permissions": ["http://localhost:3000/*", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Email Generator"
  },
  "icons": {
    "128": "icons/icon.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdnjs.cloudflare.com https://code.jquery.com; object-src 'self'"
}
